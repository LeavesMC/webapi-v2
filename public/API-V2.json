    "/v2/commit/build": {
      "post": {
        "summary": "提交一个新Build到数据库",
        "tags": [
          "Commit"
        ],
        "security": [
          {
            "bearer": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "project_id": {
                    "type": "string"
                  },
                  "version": {
                    "type": "string"
                  },
                  "channel": {
                    "type": "string"
                  },
                  "changes": {
                    "type": "string"
                  },
                  "jar_name": {
                    "type": "string"
                  },
                  "sha256": {
                    "type": "string"
                  },
                  "tag": {
                    "type": "string"
                  }
                },
                "required": true
              },
              "example": {
                "project_id": "leaves",
                "version": "1.20.1",
                "channel": "default",
                "changes": "changes",
                "jar_name": "leaves-1.20.1.jar",
                "sha256": "sha256",
                "tag": "1.20.1-1a2b3c4"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "提交成功"
          },
          "400": {
            "description": "请求格式错误"
          },
          "401": {
